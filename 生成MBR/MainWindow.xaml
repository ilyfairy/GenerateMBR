        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:生成MBR"
        mc:Ignorable="d"
        Title="Title" Height="420.093" Width="576.547" MaxWidth="576.547" MaxHeight="420.093" MinWidth="576.547" MinHeight="420.093">
    
    <Grid Margin="0,0,0,0" Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}" Loaded="Grid_Loaded">
        
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button" Content="生成" Height="52" Margin="135,313,325,0" VerticalAlignment="Top" Click="button_Click" RenderTransformOrigin="0.5,0.5" FontSize="24"
               
            >
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="360"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

        <TextBox x:Name="textBox" Height="283" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,10,10,0"
