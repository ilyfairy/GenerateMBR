        <Button x:Name="button1" Content="画图" HorizontalAlignment="Left" Height="52" Margin="323,313,0,0" VerticalAlignment="Top" Width="108" FontSize="24" Click="button1_Click"/>
        <CheckBox x:Name="checkBox" Content="CheckBox" HorizontalAlignment="Left" Height="21" Margin="71,327,0,0" VerticalAlignment="Top" Width="16" RenderTransformOrigin="1.938,1.476"/>
        <Label x:Name="label" Content="生成文件:" HorizontalAlignment="Left" Height="24" Margin="10,322,0,0" VerticalAlignment="Top" Width="61" RenderTransformOrigin="0.393,1.833"/>

    </Grid>
</Window>
